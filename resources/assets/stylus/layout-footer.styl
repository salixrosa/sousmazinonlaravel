#footer {
  // Sticky footer! Why am I still doing this this way?
  position: absolute;
  bottom: 0;
  height: $footerheight;
  @extend $center; // the position:absolute makes centering this guy difficult, unless we just use the same CSS

  padding: 5rem 0;

  color: $footercolor;
  font-size: 1.8rem;
  text-align: center;
}

#footer-menu {
  font-family: $footerfont;
  font-size: 1.75rem;
  li {
    display: inline-block;
    padding-left: 3rem;
    &:first-child {
      padding-left: 0;
    }
  }
}

#theme {
  color: $repocolor;
  font-size: 1.4rem;
  letter-spacing: 2px;

  i {
    font-size: 3.3rem;
    padding-bottom: .5rem;
  }

  &:hover {
      color: $repohoverc;
  }
}
